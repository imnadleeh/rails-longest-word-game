<h1>Welcome to the Word Game!</h1>
<p>Here are your letters:</p>
<ul>
  <% @letters.each do |letter| %>
    <li><%= letter %></li>
  <% end %>
</ul>


<form action="/score" data-turbo="false">
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="word">
  <input type="submit" class="btn btn-primary mt-2" value="Play">
</form>
